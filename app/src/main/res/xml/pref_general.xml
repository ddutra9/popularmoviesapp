<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:title="@string/pref_order_movies"
        android:key="@string/pref_order_key"
        android:defaultValue="@string/pref_order_popular"
        android:entryValues="@array/pref_order_values"
        android:entries="@array/pref_order_options" />

    <CheckBoxPreference
        android:title="@string/pref_enable_favorite"
        android:key="@string/pref_enable_favorite_key"
        android:summaryOff="@string/pref_enable_favorite_false"
        android:summaryOn="@string/pref_enable_favorite_true"
        android:defaultValue="@string/pref_enable_favorite_default" />

</PreferenceScreen>